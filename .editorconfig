root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,yml,yaml}]
trim_trailing_whitespace = false

[*.html]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.{js,ts,json}]
indent_size = 2

[*.md]
max_line_length = 80 